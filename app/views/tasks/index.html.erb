<h1>MY TASKS</h1>
<ul>
<% @tasks.each do |task| %>
<li> <%= task.completed ? "✅" : "⬜️" %> <%= link_to task.title, task_path(task) %>
<%= link_to "🗑", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to remove '#{task.title}'?"} %> </li>
<% end %>
</ul>
<div>
<%= link_to "Add a task", new_task_path %>
</div>
